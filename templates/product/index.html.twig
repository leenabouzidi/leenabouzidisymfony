{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">

        <div class="col-md-6">
            <img src="https://images.pexels.com/photos/90946/pexels-photo-90946.jpeg?auto=compress&cs=tinysrgb&w=800"
                 class="img-fluid rounded">
        </div>

        <div class="col-md-6">
            <h1 class="mb-3">Premium Wireless Headphones</h1>
            <p class="text-muted fs-4">$129.99</p>

            <p>
                Experience superior sound quality with active noise cancellation
                and 30-hour battery life.
            </p>

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.color) }}
                    {{ form_widget(form.color) }}
                </div>

                {{ form_widget(form.submit) }}
            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}
